# 類型：EditorConfig 設定
# 功能：統一行尾、縮排、編碼等

# 預設對所有檔案的規範
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown 特例：允許保留空白（避免截斷段尾）
[*.md]
trim_trailing_whitespace = false

# VHDL / Verilog 可用 2 或 4 空格，以下是 2 格縮排版本
[*.vhd]
indent_size = 2

[*.vhdl]
indent_size = 2

[*.v]
indent_size = 2
